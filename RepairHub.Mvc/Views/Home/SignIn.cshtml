@using RepairHub.Domain.Requests
@{
    ViewData["Title"] = "Вход";
}

@model UserRequest
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="text-center">
        <form asp-action="SignIn" method="post" class="p-3 bg-light rounded">
            <div class="mb-3">
                <label for="Login" class="form-label">Логин</label>
                <input type="text" class="form-control" name="Login" asp-for="Login" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="HashPassword" class="form-label">Пароль</label>
                <input type="password" class="form-control" name="HashPassword" asp-for="HashPassword" />
                <span asp-validation-for="HashPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-info text-white" style="width: 100%;">Войти</button>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Нет аккаунта?</label>
                <a asp-action="SignUp" class="btn btn-outline-info text-dark">Зарегистрироваться</a>
            </div>
        </form>
    </div>
</div>
