<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RepairHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RepairHub.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RepairHub</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Application" asp-action="Index">Заявки</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Equipment" asp-action="Index">Оборудования</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Problem" asp-action="Index">Проблемы</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Status" asp-action="Index">Статусы</a>
                            </li>
                            @if(User.IsInRole("1"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Index">Пользователи</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Role" asp-action="Index">Роли</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="WorkStatus" asp-action="Index">Рабочие статусы</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav flex-grow-2">
                            <li class="nav-item">
                                <p class="nav-link m-0 text-dark">@User.Identity.Name</p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="SignOut">Выйти</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }


    <!--

    ┻┳|
    ┳┻| _
    ┻┳| •.•). i'm watching.....
    ┳┻|⊂ﾉ
    ┻┳

    -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <footer class="border-top footer text-muted">
            <div class="container text-center">
                &copy; 2024 RepairHub – <a asp-controller="Home" asp-action="Privacy">Политика</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
