@model RepairHub.Domain.Dtos.ApplicationDto
@inject IEntityService<Status> status
@inject IEntityService<Problem> problem
@inject IEntityService<Equipment> equipment
@inject IEntityService<WorkStatus> workstatus
@inject IEntityService<Employee> employee

@{
    ViewData["Title"] = "Заявки";
    var statuses = await status.GetAll();
    var problems = await problem.GetAll();
    var equipments = await equipment.GetAll();
    var workstatuses = await workstatus.GetAll();
    var employees = await employee.GetAll();
}
<a asp-action="Edit" class="btn btn-primary col-auto py-2" asp-route-id="@Model?.Id">Изменить</a>
<a asp-action="Index" class="btn btn-primary col-auto py-2">Вернуться к списку</a>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusId)
        </dt>
        <dd class = "col-sm-10">
            @statuses.First(x => x.Id == Model.StatusId).Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProblemId)
        </dt>
        <dd class = "col-sm-10">
            @problems.First(x => x.Id == Model.ProblemId).Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentId)
        </dt>
        <dd class = "col-sm-10">
            @equipments.First(x => x.Id == Model.EquipmentId).Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkStatusId)
        </dt>
        <dd class = "col-sm-10">
            @workstatuses.First(x => x.Id == Model.WorkStatusId).Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dt>
        <dd class = "col-sm-10">
            @employees.First(x => x.Id == Model.EmployeeId).Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAddition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAddition)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateEnd)
        </dd>
        <dt class = "col-sm-2">
